{
  "name": "C+",
  "scopeName": "source.cplus",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#types"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.cplus",
          "match": "//.*$"
        },
        {
          "name": "comment.block.cplus",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cplus",
          "match": "\\b(if|else|while|for|return|break|continue|switch|case|default)\\b"
        },
        {
          "name": "keyword.other.cplus",
          "match": "\\b(let|fn|import|print)\\b"
        },
        {
          "name": "storage.modifier.cplus",
          "match": "\\b(unsigned|long|short)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.cplus",
          "match": "\\b(int|float|double|string|void|char)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cplus",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cplus",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.cplus",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.cplus",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.cplus",
          "match": "(->|>=|<=|!=|==|=|\\+|\\-|\\*|/|<|>)"
        }
      ]
    }
  }
}